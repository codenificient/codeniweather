	<line x1="6" y1="8" x2="8" y2="10" stroke="#FBBF24" stroke-width="1.5" stroke-linecap="round" />

	<!-- Cloud -->
	<ellipse cx="22" cy="20" rx="5" ry="3" fill="#E5E7EB" />
